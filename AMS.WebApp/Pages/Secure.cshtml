@page
@model AMS.WebApp.Pages.SecureModel

<div class="d-flex flex-column">
    <div class="">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>TemperatureC</th>
                    <th>TemperatureF</th>
                    <th>Summary</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Forecast != null)
                {
                    @foreach (var forecast in Model.Forecast)
                    {
                        <tr>
                            <td>@forecast.Date</td>
                            <td>@forecast.TemperatureC</td>
                            <td>@forecast.TemperatureF</td>
                            <td>@forecast.Summary</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="flex-row">
        <div>
            <form class="flex-row" method="post">
                <button type="submit" class="btn btn-info" onclick=""
                        asp-page="/Secure" asp-page-handler="GetData">
                    Post Get Data
                </button>
            </form>
        </div>
    </div>
</div>
